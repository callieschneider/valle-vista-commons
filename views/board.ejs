<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, viewport-fit=cover, interactive-widget=resizes-content">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
  <meta name="robots" content="noindex, nofollow">
  <title><%= settings.boardName %></title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="apple-touch-icon" href="/icons/apple-touch-icon.png">
  <link rel="manifest" href="/manifest.json">
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <script src="https://unpkg.com/leaflet-rotate@0.2.8/dist/leaflet-rotate.js"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <script>
    (function(){try{var t=localStorage.getItem('vvc-theme'),s=localStorage.getItem('vvc-scheme');document.documentElement.setAttribute('data-scheme',s||'forest');document.documentElement.setAttribute('data-theme',t||(window.matchMedia&&window.matchMedia('(prefers-color-scheme:dark)').matches?'dark':'light'));}catch(e){document.documentElement.setAttribute('data-scheme','forest');document.documentElement.setAttribute('data-theme','light');}})();
  </script>
</head>
<body>
  <div class="admin-return-bar" id="adminReturnBar" style="display:none;">
    <a href="/admin" class="admin-return-link">&#8249; Admin</a>
  </div>
  <div class="vvc-container vvc-container--wide">
    <!-- Header -->
    <header class="site-header">
      <div class="site-logo">
        <div class="site-logo-mark">VV</div>
        <h1 class="site-title"><%= settings.boardName %></h1>
      </div>
      <p class="site-tagline"><%= settings.boardTagline %></p>
    </header>

    <!-- Search + Theme Menu -->
    <div class="search-row">
      <div class="search-container">
        <svg class="search-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line>
        </svg>
        <input type="text" id="boardSearch" class="search-input" placeholder="Search the board..." aria-label="Search posts">
      </div>
      <div class="theme-menu">
        <button class="theme-trigger" aria-label="Appearance settings" title="Appearance">
          <svg viewBox="0 0 24 24"><circle cx="5" cy="12" r="2"/><circle cx="12" cy="12" r="2"/><circle cx="19" cy="12" r="2"/></svg>
        </button>
        <div class="theme-popover">
          <div class="popover-label">Mode</div>
          <div class="mode-toggle">
            <button class="mode-btn active" data-mode="light" title="Light">‚òÄÔ∏è</button>
            <button class="mode-btn" data-mode="dark" title="Dark">üåô</button>
          </div>
          <div class="popover-divider"></div>
          <div class="popover-label">Color</div>
          <div class="scheme-picker">
            <button class="scheme-dot active" data-scheme="forest" title="Forest Green"></button>
            <button class="scheme-dot" data-scheme="terracotta" title="Terracotta"></button>
            <button class="scheme-dot" data-scheme="slate" title="Slate Blue"></button>
            <button class="scheme-dot" data-scheme="sage" title="Sage"></button>
            <button class="scheme-dot" data-scheme="indigo" title="Indigo"></button>
          </div>
          <div class="scheme-active-label">Forest</div>
        </div>
      </div>
    </div>

    <%
      const sections = [
        { key: 'alerts', name: 'Alerts', section: 'ALERT' },
        { key: 'happenings', name: 'Happenings', section: 'HAPPENINGS' },
        { key: 'lostFound', name: 'Lost & Found', section: 'LOST_FOUND' },
        { key: 'neighbors', name: 'Neighbors', section: 'NEIGHBORS' },
        { key: 'boardNotes', name: 'Board Notes', section: 'BOARD_NOTES' },
      ];
      const allEmpty = sections.every(s => board[s.key].length === 0);
    %>

    <% if (allEmpty) { %>
      <div class="empty-state">
        <div class="empty-state-icon">üìã</div>
        <p class="empty-state-text">The board is empty right now.</p>
        <p class="empty-state-sub">Be the first to share something with the neighborhood!</p>
      </div>
    <% } else { %>
      <% sections.forEach(sec => { %>
        <% if (board[sec.key].length > 0) { %>
          <div class="section-block section-<%= sec.section %>">
            <div class="section-label">
              <span class="section-dot"></span>
              <span class="section-name"><%= sec.name %></span>
              <span class="section-count"><%= board[sec.key].length %></span>
              <span class="section-line"></span>
            </div>
            <div class="posts-stack">
              <% board[sec.key].forEach(post => { %>
                <div class="post-card searchable <%= post.urgent ? 'urgent' : '' %>" data-text="<%= (post.title + ' ' + post.desc + ' ' + (post.location || '')).toLowerCase() %>">
                  <div class="post-header">
                    <div style="display: flex; align-items: center; gap: 8px;">
                      <% if (post.pinned) { %><span class="badge-pinned" title="Pinned">üìå</span><% } %>
                      <span class="post-title"><%= post.title %></span>
                    </div>
                    <% if (post.urgent) { %>
                      <div class="post-badges"><span class="badge-urgent">Urgent</span></div>
                    <% } %>
                  </div>
                  <div class="post-body rich-content"><%- post.desc %></div>
                  
                  <!-- Mini-map if coordinates exist -->
                  <% if (post.latitude && post.longitude) { %>
                    <div class="post-mini-map-wrap">
                      <div class="post-mini-map" id="map-<%= post.id %>" 
                           data-lat="<%= post.latitude %>" 
                           data-lng="<%= post.longitude %>"
                           data-name="<%= post.locationName || 'Location' %>"></div>
                    </div>
                  <% } %>
                  
                  <div class="post-meta">
                    <% if (post.location) { %><span>üìç <%= post.location %></span><span class="sep"></span><% } %>
                    <span><%= timeAgo(post.approvedAt || post.createdAt) %></span>
                    <% if (post.editedAt) { %><span class="sep"></span><span><em>edited</em></span><% } %>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
        <% } %>
      <% }) %>
    <% } %>

    <!-- About -->
    <div class="about-section">
      <h3 class="about-title">About This Board</h3>
      <p class="about-text"><%= settings.aboutText || 'Valle Vista Commons is a privacy-first community board for our neighborhood. No accounts, no tracking, no personal information collected.' %></p>
    </div>

    <!-- Footer (removed - content moved to About section) -->
  </div>

  <!-- FAB -->
  <a href="/submit" class="fab" title="Submit a tip" aria-label="Submit a tip">
    <svg viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
      <line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line>
    </svg>
  </a>

  <script src="/js/theme.js"></script>
  <script src="/js/lightbox.js"></script>
  <script src="/js/board-search.js"></script>
  <script src="/js/board-maps.js"></script>
  <script>
    // Admin return link: show if server says admin OR localStorage remembers
    (function(){
      var isAdmin = <%= isAdmin ? 'true' : 'false' %>;
      if (isAdmin) localStorage.setItem('vvc-admin','1');
      if (isAdmin || localStorage.getItem('vvc-admin') === '1') {
        document.getElementById('adminReturnBar').style.display = '';
      }
    })();
  </script>
  <script>if('serviceWorker' in navigator){navigator.serviceWorker.register('/sw.js');}</script>
</body>
</html>
